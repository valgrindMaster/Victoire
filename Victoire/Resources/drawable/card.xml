<?xml version="1.0" encoding="utf-8" ?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
  
  <item android:state_pressed="true" >
    <shape xmlns:android="http://schemas.android.com/apk/res/android"
           android:shape="rectangle" >
      <solid
          android:color="#3f3f3f" />
      <stroke
          android:width="1dp"
          android:color="#3f3f3f" />
      <corners
          android:radius="6dp" />
      <padding
          android:left="10dp"
          android:top="10dp"
          android:right="10dp"
          android:bottom="10dp" />
    </shape>
  </item>
  
  <item>
    <shape xmlns:android="http://schemas.android.com/apk/res/android"
           android:shape="rectangle">
      <gradient
          android:startColor="#383838"
          android:endColor="#2d2d2d"
          android:angle="90" />
      <stroke
          android:width="1dp"
          android:color="#262626" />
      <corners
          android:radius="6dp" />
      <padding
          android:left="10dp"
          android:top="10dp"
          android:right="10dp"
          android:bottom="10dp" />
    </shape>
  </item>
  
</selector>